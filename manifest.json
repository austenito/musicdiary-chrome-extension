{
  "manifest_version": 2,
  "name": "Api-Hack",
  "version": "1.0.0",
  "description": "",
  "background": {
    "scripts": ["lib/jquery-1.8.3.js", "background.js"]
  },
  "content_scripts": [
   {
      "matches": ["http://www.rdio.com/*"],
      "js": ["lib/jquery-1.8.3.js", "request.js"]
    }
  ],
  "permissions": [
    "webRequest",
    "cookies",
    "tabs",
    "http://www.rdio.com/*",
    "http://*/"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/rdio-gray.png"
  }
}
